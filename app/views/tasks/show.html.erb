<div class=container>


<h2><%= @task.title %></h2>

<p><%= @task.completed %></p>

<p><%= @task.details %></p>

<p><%= link_to "Edit", edit_path %></p>

<p><%= link_to task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
  <i class="fa-solid fa-trash-can"></i>
  <% end %> </p>

<p><%= link_to "Back to list of tasks", tasks_path %></p>

</div>
