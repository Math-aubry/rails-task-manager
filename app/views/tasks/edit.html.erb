<div class=container>

<h2> Edit Task </h2>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>

  <p><%= f.label "Completed ?" %>
  <%= f.check_box :completed %> <br /></p>

<% end %>

<p><%= link_to "Back to list", tasks_path %></p>

</div>
